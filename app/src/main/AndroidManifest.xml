<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pauenrech.chancys">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
                   android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>
        <activity
                android:name="com.pauenrech.chancys.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar.InvisibleWhiteText"
                android:screenOrientation="portrait">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>

        <activity
                android:name="com.pauenrech.chancys.ProfileActivity"
                android:label="@string/profile_activity_label"
                android:theme="@style/AppTheme.NoActionBar.InvisibleWhiteText"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.pauenrech.chancys.LoginActivity"
                android:theme="@style/AppTheme.NoActionBar.InvisibleWhiteText"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.pauenrech.chancys.SelectionActivity"
                android:theme="@style/AppTheme.NoActionBar.InvisibleWhiteText"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.pauenrech.chancys.GameActivity"
                android:theme="@style/AppTheme.NoActionBar.InvisibleWhiteText"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>