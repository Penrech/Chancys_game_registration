<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootRegister" android:fitsSystemWindows="true"
        android:background="@drawable/gradient_background">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            android:id="@+id/registerAppBar"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp">

        <android.support.v7.widget.Toolbar
                android:id="@+id/register_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:padding="0dp"/>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:fillViewport="true">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
        >

            <TextView
                    android:text="Registro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo_register"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/comfortaa_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/RegisterDataCardView" android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp" android:layout_marginTop="32dp"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:id="@+id/RegisterDataCardView"
                    app:cardBackgroundColor="@color/colorCardBackground"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/titulo_register"
                    android:layout_marginTop="8dp" app:layout_constraintBottom_toTopOf="@+id/registerButton">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:id="@+id/registerEmail"
                            android:hint="Email"
                            android:textSize="18sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"
                            style="@style/customEditText"
                            android:singleLine="true"
                            android:theme="@style/customEditText"
                            android:visibility="visible"
                            android:layout_marginStart="6dp"
                            app:layout_constraintStart_toEndOf="@+id/registerEmailIcon"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="32dp"/>

                    <TextView
                            android:text="Error"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/registerEmailErrorLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="12sp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textColor="@color/colorNoTick"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/registerEmail"
                            app:layout_constraintStart_toStartOf="@+id/registerEmail"
                            android:layout_marginStart="4dp" android:visibility="gone"/>

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_email_black_24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:id="@+id/registerEmailIcon"
                            android:tint="@color/colorAccent3"
                            android:visibility="visible"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/registerEmail"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/registerEmailErrorLabel"/>

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_man_user"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:id="@+id/registerUsernameIcon"
                            android:tint="@color/colorAccent3"
                            android:visibility="visible"
                            app:layout_constraintTop_toTopOf="@+id/registerUserName"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/registerUsernameErrorLabel"/>
                    <TextView
                            android:text="Error"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/registerUsernameErrorLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="12sp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textColor="@color/colorNoTick"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/registerUserName"
                            app:layout_constraintStart_toStartOf="@+id/registerUserName"
                            android:layout_marginStart="4dp" android:visibility="gone"/>
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:id="@+id/registerUserName"
                            android:hint="Username"
                            android:maxLength="15"
                            android:textSize="18sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"
                            style="@style/customEditText"
                            android:singleLine="true"
                            android:theme="@style/customEditText"
                            android:visibility="visible"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/registerEmailErrorLabel"
                            android:layout_marginTop="24dp" android:inputType="textPersonName"
                            app:layout_constraintStart_toEndOf="@+id/registerPasswordIcon"
                            android:layout_marginStart="6dp"/>
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:focusedByDefault="false"
                            android:id="@+id/registerPassword"
                            android:hint="Contraseña"
                            android:maxLength="15"
                            android:textSize="18sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"
                            style="@style/customEditText"
                            android:singleLine="true"
                            android:theme="@style/customEditText"
                            android:visibility="visible"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:inputType="textPassword"
                            app:layout_constraintStart_toEndOf="@+id/registerPasswordIcon"
                            android:layout_marginStart="6dp" android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/registerUsernameErrorLabel"/>
                    <TextView
                            android:text="Error"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/registerPasswordErrorLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="12sp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textColor="@color/colorNoTick"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintStart_toStartOf="@+id/registerPassword"
                            android:layout_marginStart="4dp" android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/registerPassword"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_lock_black_24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:id="@+id/registerPasswordIcon"
                            android:tint="@color/colorAccent3"
                            android:visibility="visible"
                            app:layout_constraintTop_toTopOf="@+id/registerPassword"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/registerPassword"/>
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="48dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/registerPasswordErrorLabel"
                            app:layout_constraintVertical_bias="0.0">

                        <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:focusedByDefault="false"
                                android:id="@+id/registerRepitePassword"
                                android:hint="Repite la contraseña"
                                android:maxLength="15"
                                android:textSize="18sp"
                                android:textColor="@android:color/background_light"
                                android:fontFamily="@font/comfortaa_bold"
                                style="@style/customEditText"
                                android:singleLine="true"
                                android:theme="@style/customEditText"
                                android:visibility="visible"
                                android:layout_marginEnd="24dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:inputType="textPassword"
                                app:layout_constraintVertical_chainStyle="spread_inside"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/registerRepitePasswordIcon"
                                android:layout_marginStart="6dp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/ic_lock_black_24dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="24dp"
                                android:id="@+id/registerRepitePasswordIcon"
                                android:tint="@color/colorAccent3"
                                android:visibility="visible"
                                app:layout_constraintTop_toTopOf="@+id/registerRepitePassword"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="@+id/registerRepitePassword"/>
                        <TextView
                                android:text="Error"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/registerRepitePasswordErrorLabel"
                                app:layout_constraintStart_toStartOf="@+id/registerRepitePassword"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="12sp"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="@color/colorNoTick"
                                android:layout_marginEnd="24dp"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@+id/registerRepitePassword"
                                android:layout_marginStart="4dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"/>


                    </android.support.constraint.ConstraintLayout>


                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
            <Button
                    android:text="Registrarse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerButton"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textSize="18sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingEnd="32dp"
                    android:paddingStart="32dp"
                    android:background="@drawable/ripple"
                    android:textColor="@android:color/background_light"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toBottomOf="@+id/RegisterDataCardView"
                    android:layout_marginTop="48dp"
                    android:onClick="login"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/titulo_register"
                    app:layout_constraintEnd_toEndOf="@+id/titulo_register"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp"/>

            <ProgressBar
                    android:theme="@style/customSpinner"
                    style="@style/customSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/registerSpinner"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/registerButton"
                    app:layout_constraintTop_toTopOf="@+id/registerButton"
                    android:visibility="gone"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>