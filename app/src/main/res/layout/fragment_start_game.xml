<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: Update blank fragment layout -->
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StartGameFragment"
        android:background="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="32dp"
                app:cardElevation="0dp"
                android:id="@+id/startGameCardView" app:cardBackgroundColor="@color/colorCardBackground"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
                app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        android:textSize="16sp"
                        android:textColor="@android:color/background_light"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Dibuja un tick para marcar la afirmación como correcta"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/startGameLabel"
                        android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/textView12"/>
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_round_done_24px_white"
                        android:id="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="@+id/textView4"
                        app:layout_constraintBottom_toBottomOf="@+id/textView4"
                        android:tint="@color/colorGradientEnd"/>
                <TextView
                        android:text="Dibuja un tick invertido para marcar la afirmación como falsa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                        android:layout_marginStart="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/background_light"
                        android:fontFamily="@font/comfortaa_bold"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/startGameButton"/>
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_round_done_24px_white"
                        android:id="@+id/imageView5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="@+id/textView12"
                        app:layout_constraintBottom_toBottomOf="@+id/textView12"
                        android:tint="@color/colorNoTick" android:scaleY="-1"/>
                <TextView
                        android:text="Recuerda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startGameLabel"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/textView4"/>
                <Button
                        android:text="Iniciar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/startGameButton"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_marginTop="24dp" android:textSize="20sp"
                        android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.5"
                        android:visibility="visible"/>
                <ProgressBar
                        style="@style/customSpinner"
                        android:theme="@style/customSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:id="@+id/startGameSpinner"
                        app:layout_constraintTop_toTopOf="@+id/startGameButton"
                        app:layout_constraintBottom_toBottomOf="@+id/startGameButton"
                        android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:indeterminate="true"
                        android:visibility="gone"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
