<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorGradientEnd</item>
    </style>
    <style name="AppTheme.NoActionBar.InvisibleWhiteText">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>
    <style name="AppTheme.NoActionBar.LoadingHome">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay.BlackText">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>
    <style name="customProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!--<item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_material</item>-->
        <item name="android:colorControlActivated">@color/colorNoTick</item>
    </style>
    <style name="customSpinner" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorControlActivated">@android:color/background_light</item>
    </style>
    <style name="customSeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
        <item name="android:thumbTint">@android:color/background_light</item>
        <item name="colorAccent">@android:color/background_light</item>
    </style>
    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/colorWhiteSemiTransparent</item>
        <item name="colorControlNormal">@color/colorWhiteSemiTransparent</item>
        <item name="colorControlActivated">@android:color/background_light</item>
        <item name="colorControlHighlight">@android:color/background_light</item>
    </style>

</resources>
